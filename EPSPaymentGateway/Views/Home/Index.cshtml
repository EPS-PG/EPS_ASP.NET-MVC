@model EPSPaymentGateway.Models.SalesDetails
@{
    ViewBag.Title = "Home Page";
    var message = TempData["Message"]?.ToString();
}
<div class="row" style="padding:20px">
    <h1 class="text-center">EPS Payment Gateway Test</h1>
</div>

<div class="row">
    <div class="col-12">
        @if (!string.IsNullOrWhiteSpace(message))
        {
            <h4 class="text-center text-info">@message</h4>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-default">Pay Now</button>
                </div>
            </div>
        }
    </div>
</div>